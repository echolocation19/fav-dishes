<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.favdishes">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.FavDishes">
        <activity
            android:name=".presentation.activity.AddUpdateDishActivity"
            android:exported="false"
            android:label="Add Dish"
            android:theme="@style/Theme.FavDishes.NoActionBar"
            />
        <activity
            android:name=".presentation.activity.SplashActivity"
            android:exported="true"
            android:theme="@style/Theme.FavDishes.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".presentation.activity.MainActivity"
            android:exported="false"
            android:label="@string/app_name" />
    </application>

</manifest>